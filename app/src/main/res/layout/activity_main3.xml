<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/split"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="106dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:text="Split"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@+id/tran"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tran"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:layout_marginTop="106dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:lineSpacingExtra="6sp"
        android:text="             Transaction"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/csplit"
        app:layout_constraintTop_toBottomOf="@+id/csplit" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:text="Money borrowed"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/csplit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/csplit"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:text="Money Lent"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/user"
        android:layout_width="233dp"
        android:layout_height="34dp"
        android:layout_marginStart="23dp"
        android:fontFamily="@font/courgette"
        android:textAlignment="textStart"
        android:textColor="#B0FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="67dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/csplit"
        app:layout_constraintTop_toBottomOf="@+id/csplit"
        app:srcCompat="@drawable/baseline_account_balance_24" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/split"
        app:layout_constraintTop_toTopOf="@+id/split"
        app:srcCompat="@drawable/baseline_call_split_24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/tran"
        app:layout_constraintTop_toTopOf="@+id/tran"
        app:srcCompat="@drawable/baseline_add_business_24" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:srcCompat="@drawable/baseline_schedule_send_24" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/csplit"
        app:layout_constraintTop_toTopOf="@+id/csplit"
        app:srcCompat="@drawable/baseline_account_balance_wallet_24" />

    <TextView
        android:id="@+id/lent"
        android:layout_width="69dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/courgette"
        android:text="00"
        android:textAlignment="textStart"
        android:textColor="#014904"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/csplit"
        app:layout_constraintTop_toTopOf="@+id/csplit" />

    <TextView
        android:id="@+id/borrowed"
        android:layout_width="69dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/courgette"
        android:text="00"
        android:textAlignment="textStart"
        android:textColor="#AE0606"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>