<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivitysplit">

    <TextView
        android:id="@+id/gsplit"
        android:layout_width="324dp"
        android:layout_height="69dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:text="Group Split"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agroup" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/user"
        android:layout_width="233dp"
        android:layout_height="34dp"
        android:layout_marginStart="23dp"
        android:fontFamily="@font/courgette"
        android:textAlignment="textStart"
        android:textColor="#B0FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="67dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/csplit"
        android:layout_width="325dp"
        android:layout_height="69dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:text="Create Split"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/agroup"
        android:layout_width="324dp"
        android:layout_height="69dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:text="Add Group"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsplit" />

    <TextView
        android:id="@+id/hsplit"
        android:layout_width="323dp"
        android:layout_height="69dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/courgette"
        android:text="Split History"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/csplit" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/agroup"
        app:layout_constraintEnd_toEndOf="@+id/agroup"
        app:srcCompat="@drawable/baseline_create_new_folder_24" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/hsplit"
        app:layout_constraintEnd_toEndOf="@+id/hsplit"
        app:layout_constraintTop_toTopOf="@+id/hsplit"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_history_24" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/csplit"
        app:layout_constraintEnd_toEndOf="@+id/csplit"
        app:srcCompat="@drawable/baseline_add_card_24" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/gsplit"
        app:layout_constraintEnd_toEndOf="@+id/gsplit"
        app:srcCompat="@drawable/baseline_add_card_24" />

    <Button
        android:id="@+id/shome"
        android:layout_width="89dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="HOME "
        android:textAlignment="center"

        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>